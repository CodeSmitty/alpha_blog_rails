
<h1>Articles Listing Page</h1>

<table>
    <thead>
        <th colspan=3>Title</th>
        <th colspan=3>Description</th>
        <th colspan=3>Actions</th>
    </thead>


    <tbody>
        <% @articles.each do | article | %>
            <tr>
                <td colspan=3><%= article.title %> <td>
                <td colspan=3><%= article.description %>  </td>
                <td ><%= link_to 'Show', article_path(article) %> </td>
                <td ><%= link_to 'Edit', edit_article_path(article) %> </td>
                <td><%= link_to 'Delete', article_path(article),  data: {turbo: true, turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
            </tr>
        <% end %>
    </tbody>
</table>


<p><%= link_to 'Create new article', new_article_path %></p>
